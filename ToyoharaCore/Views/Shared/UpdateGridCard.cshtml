                                            <td>
                                                <span>@(CommonMethods.HtmlToText(Model.GridSettings.Where(x => x.field_description == field.field_description.Substring(0, field.field_description.Length - 5)).FirstOrDefault().russian_field_description))<span style='@(Convert.ToBoolean(field.is_required) ? "color:red;" : "display:none;")'>*</span>&nbsp;:</span>
                                            </td>
                                        }
                                        @switch (field.ui_type)
                                        {
                                            case ("textbox_string"):
                                                <td class="w60 "><input class="@(field.ui_type) text_b w100 td_value @(Convert.ToBoolean(field.global_editable)?"editable":"non_editable") @(Convert.ToBoolean(field.global_visible)?"global_visible":"global_non_visible")" type="text" element_type="@field.ui_type" name="@(field.field_description)" id="@("card"+field.field_description)" requd='@(Convert.ToBoolean(field.is_required) ? "required" : "no_required")' rus_name="@(field.russian_field_description)" /></td> break;
