                                @foreach (var field in v)
                                {
                                    <tr class="@(Convert.ToBoolean(field.global_editable)?"":"non_editable") @(Convert.ToBoolean(field.global_visible)?"global_visible":"global_non_visible") @(field.ui_type == null | field.ui_type == "dropdown_list_description" | field.ui_type == "dropdown_description"   | field.ui_type == "dropdown_txt_description"| field.ui_type == "dropdown_txt_list_description" ? "null_type" : "")" name="@field.field_description">
